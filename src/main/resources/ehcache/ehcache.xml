<?xml version="1.0" encoding="UTF-8"?>
<ehcache>
    
    <diskStore path="java.io.tmpdir/cache"/>
    
    <defaultCache maxElementsInMemory="10000" overflowToDisk="true"
     eternal="false" memoryStoreEvictionPolicy="LRU"
      diskExpiryThreadIntervalSeconds="600"
     timeToIdleSeconds="3600" timeToLiveSeconds="100000"
     diskPersistent="false"/>
    
    <!-- Special objects setting.
    <cache name="org.springside.examples.miniweb.entity.user.User"
    maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    <cacheEventListenerFactory
    class="net.sf.ehcache.distribution.RMICacheReplicatorFactory"
    properties="replicatePuts=false,replicateUpdatesViaCopy=false" />
    </cache>-->
    <cache name="adminResource" maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    </cache>
    <cache name="dictionary" maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    </cache>
    <cache name="userInfo" maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    </cache>
    <cache name="userInLocalInfo" maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    </cache>
    <cache name="deptInLocalInfo" maxElementsInMemory="500" overflowToDisk="true" eternal="true">
    </cache>
</ehcache>
